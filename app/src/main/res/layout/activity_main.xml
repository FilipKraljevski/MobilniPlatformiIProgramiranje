<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewResultExplicitActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Result Explicit Activity" />

    <Button
        android:id="@+id/btnExplicitActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explicit Activity" />

    <Button
        android:id="@+id/btnImplicitActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Implicit Activity" />

    <Button
        android:id="@+id/btnImageSelectActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select picture from phone" />

</LinearLayout>